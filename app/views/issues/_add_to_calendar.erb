<% if (Setting["plugin_redmine_meeting_room_calendar"]["tracker_id"]).to_i == @issue.tracker_id %>
<%= stylesheet_link_tag("add_to_calendar.css", :plugin => 'redmine_meeting_room_calendar') %>
  <%= javascript_tag do -%>
    if ($('#content > .contextual .redmine-add-to-calendar-button').length == 0) {
      $('#content > .contextual').prepend(
        '<%= link_to l(:button_add_to_calendar), {:controller => 'add_to_calendar', :action => 'issue', :issue_id => @issue }, :class => 'icon icon-close redmine-add-to-calendar-button' %>'
      )
    }
  <% end -%>
<% end %>
